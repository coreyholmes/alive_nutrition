 <div class="col-md-4 col-sm-12">
    <div class="contact-form bottom">
    <h2>Send us a message</h2>
      <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
      <div class="form-group">
        <%= f.input :name, :label => false, :required => true, input_html: { class: "form-control" }, placeholder: 'Name' %>
        </div>
        <div class="form-group">
        <%= f.input :email, :label => false, :required => true, input_html: { class: "form-control" }, placeholder: 'Email' %>
        </div>
        <div class="form-group">
        <%= f.input :message, :as => :text, :label => false, :required => true, input_html: { class: "form-control" }, placeholder: 'Message' %>
        </div>
        <div>
          </br>
          <%= f.button :submit, 'Send', :class=> "btn btn-submit" %>
        </div>
      <% end %>
    </div>
</div>